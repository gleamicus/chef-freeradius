# -*- text -*-
##
## clients.conf -- client configuration directives
##
##      $Id$

<% node['freeradius']['clients'].each do |client, client_hash| %>
client <%= client %> {
  ipaddr = <%= client_hash['ipaddr']  %>
  netmask = <%= client_hash['netmask'] %>
  secret = <%= client_hash['secret'] %>
  nastype = <%= client_hash['nastype'] %>
}
<% end %>
